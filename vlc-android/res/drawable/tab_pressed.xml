<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#FFcccccc" />
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle" >
            <padding
                android:bottom="15dp"
                android:left="10dp"
                android:right="10dp"
                android:top="15dp" />

            <stroke
                android:width="2dp"
                android:color="@color/darkorange" />

            <solid android:color="#00000000" />
        </shape>
    </item>

</layer-list>
