<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/video_pip_width"
    android:layout_height="@dimen/video_pip_heigth"
    android:keepScreenOn="true">

    <SurfaceView
        android:id="@+id/player_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/popup_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_close_w"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/popup_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/popup_close"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_popup_expand_normal_w"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/video_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/popup_expand"
        android:src="@drawable/ic_popup_pause"
        android:visibility="gone" />

</RelativeLayout>